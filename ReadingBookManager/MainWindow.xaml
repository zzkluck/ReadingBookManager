<Window x:Class="ReadingBookManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReadingBookManager"
        mc:Ignorable="d"
        Title="ReadingBookManager"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown"
        Height="600" Width="1024"
        WindowStartupLocation="CenterScreen">
    <Grid Name="GridMain">
        <Frame Name="FrameMain" Source="StartPage.xaml" NavigationUIVisibility="Hidden"/>
        <StatusBar VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal" Name="StatusRateOfRead">
                <ProgressBar Maximum="{Binding TotalPage}" Value="{Binding TotalReadPage}" Width="200"/>
                <TextBlock Text="{Binding RateOfRead}"/>
            </StackPanel>
        </StatusBar>
    </Grid>
</Window>
