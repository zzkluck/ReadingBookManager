<Window x:Class="ReadingBookManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReadingBookManager"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="400" Width="525">
    <Window.Resources>
        <Style x:Key="ListBoxStyle" TargetType="{x:Type ListBox}">
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Image Source="{Binding Icon}"/>
                            <StackPanel>
                                <TextBlock Text="{Binding BookName}"/>
                                <TextBlock Text="{Binding BookName2}"/>
                                <TextBlock Text="{Binding RateOfProgress}"/>
                                <TextBlock Text="{Binding Position}"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <StackPanel>
        <ListBox Name="Main" ItemsSource="{Binding}" Style="{StaticResource ListBoxStyle}" Height="300"/>
        <TextBlock Text="{Binding RateOfRead}" Name="aaa" Height="20"/>
    </StackPanel>
</Window>
